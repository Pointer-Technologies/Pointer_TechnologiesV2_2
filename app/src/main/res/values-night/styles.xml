<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:listDivider"> @android:color/transparent </item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorText">#81111E</item>
        <item name="colorHint">@color/green</item>
        <item name="colorWarning">@color/red</item>
        <item name="colorBackground">@color/colorPrimary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorToolbar">@color/colorToolbar</item>
        <item name="colorTitle">@color/colorTitle</item>
        <item name="actionMenuTextColor">@color/colorTitle</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

</resources>